<div class="row ml-4">
  <%= render 'shared/errors', obj: @timesheet %>
  <div class="col-10">
    <%= form_with(scope: :timesheet, url: timesheets_path, local: true) do |f| %>
    <div class="form-group row">
      <%= f.label :date, class: "mr-auto" %>
      <%= f.date_select(:date, class: "date-fields") %>
    </div>
    <div class="form-group row">
      <%= f.label :start_time, class: "mr-auto" %>
      <%= f.time_select(:start_time, include_blank: true) %>
    </div>
    <div class="form-group row">
      <%= f.label :finish_time, class: "mr-auto" %>
      <%= f.time_select( :finish_time, include_blank: true) %>
    </div>
    <div class="form-group row mt-4">
      <%= link_to "Back to home", root_path, class: "btn btn-outline-dark  mr-auto" %>
      <%= f.submit "Create", class: "btn btn-outline-dark pl-5 pr-5" %>
      <% end %>
    </div>
  </div>
</div>